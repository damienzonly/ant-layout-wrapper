{
    "compilerOptions": {
        "target": "es3",
        "module": "commonjs",
        "lib": ["ES2018", "DOM", "ES2018.Promise"],
        "allowJs": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "jsx": "react",
        "noImplicitAny": false,
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "noUnusedLocals": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src", "tsconfig.json"],
    "exclude": ["node_modules"]
}
